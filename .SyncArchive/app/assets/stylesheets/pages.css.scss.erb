@import "media-queries";

html, body {
	height: 100%;
	margin: 0 0 0 0;
	padding-top: 0px;
	overflow-x: hidden;
}
@media (max-width: 979px) {
  body {
    padding-top: 0px;
  }
}


img {
	margin: 0 auto;
	display: block;
	z-index: 100;
}
.splash_top_cont {
	min-width: 100%;
	height: 50%;
	background-image: url(image_path('nose.jpg'));
	background-size: cover;
	margin: 0 0 0 0;
	padding: 0 0 0 0;
	overflow: hidden;
	a {
	font-family: helvetica;
			font-weight:  900;
			color: white;
			font-size: 2em;	
			text-align: center;
			opacity: 1;
			z-index: 100;
			margin-bottom: 0;
			-webkit-transition: color 1s;
    -moz-transition:    color 1s;
    -ms-transition:     color 1s;
    -o-transition:      color 1s;
    transition:         color 1s;
}
a:hover {
	text-decoration: none;
	-webkit-transition: color 1s;
    -moz-transition:    color 1s;
    -ms-transition:     color 1s;
    -o-transition:      color 1s;
    transition:         color 1s;
    color:#666;
}
} 
.splash_top_cont:hover {
	opacity: .9;

}
#splash_top_cover {
	min-width: 100%;
	height: 100%;
	background-color: rgba(black, .5);
	background-size: cover;
	opacity: .9;
	z-index: 0;
	position: absolute;
	top: 0;
} 
#splash_top_text_holder {
